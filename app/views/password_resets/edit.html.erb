<div class='container'>
    <div class= 'text-center mt-6'>
        <h1 class='text-2xl font-semibold'>パスワードリセット</h1>
    </div>

    <%= form_with model: @user, url: password_reset_path(@token), method: :patch do |f| %>
        <%= render 'shared/error_messages', model: f.object %>

        <%= f.label :password,  class: 'label w-full md:w-1/2 mx-auto' %>
        <%= f.password_field :password, class: 'input input-borderd input-accent form-control mb-6 w-full md:w-1/2 mx-auto' %>

        <%= f.label :password_confirmation,  class: 'label w-full md:w-1/2 mx-auto' %>
        <%= f.password_field :password_confirmation, class: 'input input-borderd input-accent form-control mb-6 w-full md:w-1/2 mx-auto' %>

        <div class='mx-auto md:w-1/2'>
            <%= f.submit 'パスワード再設定', class: 'btn btn-primary w-full mt-6 mb-6' %>
        </div>
    <% end %>

</div>