<% content_for :title, page_title('パスワードリセット申請') %>
<div class='container'>
    <div class= 'text-center mt-6'>
        <h1 class='text-2xl font-semibold'>パスワードリセット申請</h1>
    </div>

    <%= form_with url: password_resets_path do |f| %>

        <%= f.label :email, class: 'label w-full md:w-1/2 mx-auto' %>
        <%= f.email_field :email, class: 'input input-borderd input-accent form-control mb-6 w-full md:w-1/2 mx-auto' %>

        <div class='mx-auto md:w-1/2'>
            <%= f.submit 'メール送信', class: 'btn btn-primary w-full mt-6 mb-6' %>
        </div>
    <% end %>

    <div class='text-center mb-6'>
        <%= link_to 'ログインページへ', login_path %>
    </div>
</div>